<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="@dimen/button_default_hw"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_marginEnd="16dp"
             tools:background="@color/black"
             android:layout_height="@dimen/button_default_hw">
    <ImageView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:id="@+id/iv_sound"
            android:background="@drawable/button_white_circle_border"
            android:layout_height="match_parent"/>

    <TextView
            android:layout_width="24dp"
            android:layout_gravity="end|bottom"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:id="@+id/tv_volume"
            tools:text="50"
            android:background="@drawable/button_white_circle_background"
            android:layout_height="24dp"/>

</FrameLayout>